{
    "ReverseProxy": {
        "Routes": {
            "auth": {
                "ClusterId": "keycloak",
                "Match":{
                    "Path": "/auth/{**catch-all}"
                },
                "Transforms": [
                    { "RequestHeader": "X-Forwarded-Proto", "Set": "http" },
                    { "RequestHeader": "X-Forwarded-Host", "Set": "localhost" },
                    { "RequestHeader": "X-Forwarded-Port", "Set": "5000" }
                ]
            },
            "user-management": {
                "ClusterId": "user-management",
                "AuthorizationPolicy": "default",
                "Match": {
                    "Path": "/api/user/{**catch-all}"
                },
                "Transforms": [
                    {"PathPattern": "{**catch-all}"},
                    { "RequestHeader": "X-Forwarded-Proto", "Set": "http" },
                    { "RequestHeader": "X-Forwarded-Host", "Set": "localhost" },
                    { "RequestHeader": "X-Forwarded-Port", "Set": "5000" }
                ]
            },
            "budget": {
                "ClusterId": "budget",
                "AuthorizationPolicy": "default",
                "Match": {
                    "Path": "/api/budget/{**catch-all}"
                },
                "Transforms": [
                    {"PathPattern": "{**catch-all}"},
                    { "RequestHeader": "X-Forwarded-Proto", "Set": "http" },
                    { "RequestHeader": "X-Forwarded-Host", "Set": "localhost" },
                    { "RequestHeader": "X-Forwarded-Port", "Set": "5000" }
                ]
            },
            "transactions": {
                "ClusterId": "transactions",
                "AuthorizationPolicy": "default",
                "Match": {
                    "Path": "/api/transactions/{**catch-all}"
                },
                "Transforms": [
                    {"PathPattern": "{**catch-all}"},
                    { "RequestHeader": "X-Forwarded-Proto", "Set": "http" },
                    { "RequestHeader": "X-Forwarded-Host", "Set": "localhost" },
                    { "RequestHeader": "X-Forwarded-Port", "Set": "5000" }
                ]
            }
        },
        "Clusters": {
            "keycloak": {
                "Destinations": {
                    "keycloak1": {
                        "Address": "http://keycloak:8080",
                        "Health": "http://keycloak:9000"
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:10",
                        "Timeout": "00:00:05",
                        "Policy": "ConsecutiveFailures",
                        "Path": "/auth/health/ready"
                    }
                }
            },
            "user-management": {
                "LoadBalancingPolicy": "RoundRobin",
                "Destinations": {
                    "user-management1": {
                        "Address": "http://user_mgm:8080"
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:10",
                        "Timeout": "00:00:05",
                        "Policy": "ConsecutiveFailures",
                        "Path": "/health"
                    }
                }
            },
            "budget": {
                "LoadBalancingPolicy": "RoundRobin",
                "Destinations": {
                    "budget1": {
                        "Address": "http://budget_svc:8083"
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:10",
                        "Timeout": "00:00:05",
                        "Policy": "ConsecutiveFailures",
                        "Path": "/health"
                    }
                }
            },
            "transactions": {
                "LoadBalancingPolicy": "RoundRobin",
                "Destinations": {
                    "transactions1": {
                        "Address": "http://transactions_svc:80"
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:10",
                        "Timeout": "00:00:05",
                        "Policy": "ConsecutiveFailures",
                        "Path": "/health"
                    }
                }
            }
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "Auth": {
        "Authority": "http://keycloak:8080/auth/realms/fin-planner",
        "RequireHttpsMetadata": true
    }
}